<style type="text/css">#map-canvas { height: 400px; margin: 0; padding: 0;}</style>
  <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=API_KEY"></script>
  <script type="text/javascript">
      function initialize() {

        var myLatlng = new google.maps.LatLng(-25.363882,131.044922); // selected location
          var mapOptions = {
            zoom: 4,
            center: myLatlng
          }
          var map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);

      // <% for attraction in @city %>
          var marker = new google.maps.Marker({
              position: myLatlng,
              map: map,
              title:"Hello World!"
          });
      // <% end %>
      }
      google.maps.event.addDomListener(window, 'load', initialize);
    </script>
<div id="map-canvas"></div>